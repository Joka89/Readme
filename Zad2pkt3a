using System;

namespace Zad 3a
{
    class Program
    {
        static void Main(string[] args)
        {
            {
                int a, b, dodawanie, odejmowanie, i;
                Console.WriteLine("Program dodaje i odejmuje dwie dowolne liczby");
                Console.WriteLine("Podaj liczbę a");
                a = int.Parse(Console.ReadLine());
                Console.WriteLine("Podaj liczbę b");
                b = int.Parse(Console.ReadLine());

                Console.WriteLine("Jeśli chcesz znać wynik dodawania wpisz 4, jeśli chcesz wynik odejmowania wpisz 3");
                Console.ReadLine();

                odejmowanie = a - b;
                dodawanie = a + b;
                i = 3;
                if (i == 3)
                {
                    Console.WriteLine("Wynik odejmowania wynosi " + odejmowanie);
                }
                else
                {
                    Console.WriteLine("Wynik dodawania wynosi " + dodawanie);
                }
            }
        }
    }
}
